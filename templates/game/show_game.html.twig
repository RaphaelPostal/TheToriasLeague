                method: 'POST',
                success: function(data) {
                    console.log('le tour à changé');
                },
                error: function(){
                }
            })


            //FIN TEST

            //Bloquer le plateau (overlay, ...)
            //Relancer le timer...
           boucle = setInterval(refreshGame, 3000);
        })

