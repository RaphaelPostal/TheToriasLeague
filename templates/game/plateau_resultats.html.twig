                   class="choixSecret" id="secret{{ loop.index }}">

            <input type="checkbox" name="carte_depot_{{ card }}" value="{{ card }}"
                   style="display: none"
                   class="choixDepot" id="depot{{ loop.index }}">

            <input type="checkbox" name="carte_offre_{{ card }}" value="{{ card }}"
                   style="display: none"
                   class="choixOffre" id="offre{{ loop.index }}">

            <input type="checkbox" name="carte_echange_{{ card }}" value="{{ card }}"
                   style="display: none"
                   class="choixEchange" id="echange{{ loop.index }}">
        </div>
    {% endfor %}
</div>


