{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <section id="home">
        <div id="home_fond"><img src="img/illu_accueil_jeu2.png"></div>
        <div id="connexion">
            <form method="post" id="form_connexion">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}
                <div id="form_co1">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control col-4" placeholder="Email" required autofocus>
                    <input type="password" name="password" id="inputPassword" class="form-control col-4" placeholder="Mot de passe" required>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="checkbox mb-3">
                        <input type="checkbox" id="checkbox" name="_remember_me"><label for="_remember_me">Rester connecté</label>
                    </div>
                </div>
                <div id="form_co2">
                    <a href="{{ path('oubli') }}">Mot de passe oublié ?</a>
                    <a href="{{ path('inscription') }}">Pas encore inscrit ? Faites-le ici !</a>
                    <button id="btn_connexion" class="btn btn-lg btn-primary" type="submit">
                        CONNEXION
                    </button>
                </div>
            </form>
        </div>
    </section>



{% endblock %}
