{% extends 'base.html.twig' %}

{% block title %}Rechercher un joueur{% endblock %}

{% block body %}

    <style type="text/css">
        body{
            background-image: url("{{ asset('img/feuillage_1.png') }}");
        }

        h3{
            text-align: center;
            color: gold;
            font-size: 25px;
            font-family: 'aventura';
        }

        h4{
            text-align: center;

        }
        #results-recherche li{
            list-style-type: none;
            font-size: 18px;
            color: white;
            font-family: sans-serif;
        }

        table{
            width: 60%;
            margin-left: 20% ;
            margin-top: 50px;

        }

        #content{
            margin-top: 100px;
        }

        .friend{
            width: 40%;
        }
        #titres{
            background-color: rgba(0, 0, 0, 0.8);
            color: white;
        }

        td img{
            position: relative;
            width: 60px;
            left: 15%;
        }
        table a{
            color: white;
        }

         footer{
             display: none;

        }
    </style>

    <div id="content">
        <h3>RESULTATS DE RECHERCHE</h3>
        {% if users is defined %}
        <div id="results-recherche">
            <table>
                <tr id="titres"><th>Avatar</th><th>Pseudo</th><th>Classement</th><th>Email</th></tr>
                {% for user in users %}
                        <tr><td><img src="{{ asset('img/avatars/'~user.photo) }}" alt="avatar"></td><td>{{ user.pseudo }}</td> <td>{{ user.elo }} elo</td><td class="friend"> {{ user.email }} | <a href="{{ path('ajout_ami', {id: user.id}) }}">Ajouter en ami</a></td></tr>
                {% endfor %}
            </table>


        </div>
        {% endif %}
    </div>

    {% if message is defined and amis is defined%}
        <h4>{{ message }}</h4>
    {% endif %}


{% endblock %}
